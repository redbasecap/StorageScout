# Firebase Emulator Configuration (for local Docker development)
# Copy this file to .env.local and it will be used automatically

# Enable Firebase Emulators
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=true

# Emulator Hosts (use localhost for native development, service names for Docker)
# For Docker: use the service name from docker-compose.yml
# For Native: use localhost

# Auth Emulator
NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# Firestore Emulator
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080

# Storage Emulator
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=localhost
NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_PORT=9199

# For Docker (uncomment these and comment out the localhost versions above)
# NEXT_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=firebase-emulators:9099
# NEXT_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=firebase-emulators
# NEXT_PUBLIC_FIREBASE_STORAGE_EMULATOR_HOST=firebase-emulators
